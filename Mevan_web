pipeline {
    // add your slave label name
    agent { label 'slave_2'}
    tools{
        maven 'maven-test'
    }
    stages {
        stage ('Checkout_SCM') {

            steps {
          	    
	     checkout scm
            }
        }

        stage ('Maven_Build') {

            steps {
               sh 'mvn clean package'
            }
        }
        
        stage ('Deploy_Tomcat') {

            steps {
	      sshagent(['Tomcat_app']) {
              sh "scp -o StrictHostKeyChecking=no  target/maven-web-application.war  ec2-user@172.31.14.164:/opt/tomcat11/webapps"
	      }
         }
        }
        
    }
}
